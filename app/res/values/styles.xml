<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="EditText">
        <item name="android:capitalize">none</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/table_text</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="SignInEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoText">false</item>
        <item name="android:capitalize">none</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/table_text</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="ShadowText">
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="AvatarLarge">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="AvatarMedium">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="AvatarSmall">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="ListView">
        <item name="android:dividerHeight">2px</item>
        <item name="android:divider">@drawable/bootstrap_divider</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="ListSubtitleText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/table_text_light</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Custom Spinner -->
    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="ListSpinner" parent="Spinner">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/list_item_background</item>
    </style>


    <!--layout-->
    <!-- 全屏幕拉伸-->
    <style name="layout_full">  
           <item name="android:layout_width">fill_parent</item>  
           <item name="android:layout_height">fill_parent</item>  
    </style>

    <!-- 固定自身大小-->
    <style name="layout_wrap">  
           <item name="android:layout_width">wrap_content</item>  
           <item name="android:layout_height">wrap_content</item>  
    </style>
    <!-- 横向分布-->
    <style name="layout_horizontal" parent="layout_full">
        <item name="android:layout_width">0px</item>
    </style>
    <!-- 纵向分布-->
    <style name="layout_vertical" parent="layout_full">
        <item name="android:layout_height">0px</item>
    </style>

    <!--momo-->
    <style name="Style_Scrollable">
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>
    <!--jiepang-->
    <style name="subdivider_text_white">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="user_profile_score_text">
        <item name="android:textSize">20.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="title_primary">
        <item name="android:textSize">18.0px</item>
        <item name="android:textColor">#ff3b3b3b</item>
    </style>
    <style name="style_patterns">
        <item name="android:paddingLeft">@dimen/style_patterns</item>
        <item name="android:paddingRight">@dimen/style_patterns</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="style_patterns_sectionBar">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="Profile_Item_Top">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/font_attribute</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    <style name="Profile_Item_Bottom">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/font_value</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Style_Patterns_Content">
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50.0dip</item>
    </style>
    <style name="Patterns_Text_Left">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/font_attribute</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="Profile_Item_Right" parent="@style/Item_Right">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/font_value</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Item_Right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="loading_text_small">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
</resources>
