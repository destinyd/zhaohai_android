<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">

    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:layout_gravity="left|center_vertical"
    >
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:gravity="center_vertical">
        android:layout_height="match_parent" android:id="@+id/linearLayout">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="活动类型"
                  android:id="@+id/textView1"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""
                  style="@style/EditText"
                  android:id="@+id/et_types" android:hint="例如：桌游 鸡尾酒"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:gravity="center_vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动标题*"
                android:id="@+id/textView"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EditText"
                android:text=""
                android:id="@+id/et_title"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tableRow">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="活动描述"
                  android:id="@+id/textView2"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""
                  style="@style/EditText"
                  android:id="@+id/et_desc"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tableRow1">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="开始时间"
                  android:id="@+id/textView3"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""
                  android:id="@+id/tv_started_at"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改"
                android:id="@+id/btn_edit_started_at" android:layout_gravity="center"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content"
            >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/textView4"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择活动地点"
                android:id="@+id/btn_to_map"/>
    </TableRow>
</TableLayout>